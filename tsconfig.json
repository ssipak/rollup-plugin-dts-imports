{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2019"
    ],
    "baseUrl": ".",
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
